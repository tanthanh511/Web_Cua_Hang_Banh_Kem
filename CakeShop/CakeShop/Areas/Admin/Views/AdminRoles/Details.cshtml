@model CakeShop.Models.Role

@{
    ViewData["Title"] = "Thông tin quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-10">
      <div class="card">
           <div class="card-body">
               <h4 class="card-title">Details</h4>
               <hr />
               <div class="table-responsive">
                   <table class="product-info-table m-t-20">
                       <tbody>
                           <tr>
                               <td>ID:</td>
                               <td class="text-dark font-weight-semibold">@Model.RoleId</td>
                           </tr>

                            <tr>
                                <td>Name:</td>
                                <td >@Model.RoleName</td>
                            </tr>

                            <tr>
                                <td>Description:</td>
                                <td >@Model.Description</td>
                            </tr>
                        
                       </tbody>
                   </table>
               </div>
            </div>
      </div>
