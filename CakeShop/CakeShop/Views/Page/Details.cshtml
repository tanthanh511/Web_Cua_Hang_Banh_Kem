@model CakeShop.Models.Page

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = $"/page/{Model.Alias}";
}

<!-- Hero Section Begin -->
<section class="hero hero-normal">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84 888 888 888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="blog-details spad">
    @*header*@
    <div class="container-fluid p-0 mb-5 pb-5">
        <div id="header-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="~/Userasset/img/categories/cake_2.jpg" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class=" text-black" style="max-width: 900px; padding-bottom: 150px ;">
                            <h1 class=" text-uppercase mb-md-3">Blog</h1>
                            <div class="d-inline-flex align-items-center text-black">
                                <h4 class="m-0"><a class="text-success" asp-controller="Blog" asp-action="Index">Home</a></h4>
                                <i class="fa fa-circle px-3"></i>
                                <h4 class="m-0">Page - Detail</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*body*@
    <div class="container">
        <div class="row">
            <div class="col-lg-1 col-md-5 order-md-1 order-2"></div>
            <div class="col-lg-10 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    @*title*@
                    <h1 class="text-center ">
                        <a class="text-body" href="@url">@Model.Title</a>
                    </h1>
                    <hr />
                    <img src="~/images/pages/@Model.Thumb" alt="@Model.Title" style="width: 1000px;">
                    <ul>
                        <hr />
                        <li><i class="fa fa-calendar-o"></i> @Model.CreatedDate.Value.ToShortDateString()</li>

                    </ul>
                    <h3 class="text-center ">
                        @Model.PageName
                    </h3>
                    <p class="text-center ">@Html.Raw(Model.Contents)</p>

                </div>

                
            </div>
        </div>
    </div>


</section>


