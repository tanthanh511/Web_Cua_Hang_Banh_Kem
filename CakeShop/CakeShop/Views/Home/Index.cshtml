<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <div class="row">


            <!--search category-->
            <div class="col-lg-12">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="What do you need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>

                    <!--phone number-->
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+84 888 8888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>

                <!--introduce-->

                <div class="container-fluid p-0 mb-5 pb-5">
                    <div id="header-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="w-100" src="~/Userasset/img/categories/cake_2.jpg" alt="Image">
                                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                    <div class="p-3 text-black" style="max-width: 900px;">
                                        @*<h4 class=" text-uppercase mb-md-3">Traditional & Delicious</h4>*@
                                        <h1 class="display-3  mb-md-4">Delicious traditional cream cake left by great-grandmother</h1>
                                        <a href="" class="btn btn-success py-md-3 px-md-5 mt-2">Learn More</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<hr class="sidebar-divider">

<!--gioi thieu-->
<div class="container-fluid py-5">
